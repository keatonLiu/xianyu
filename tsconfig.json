{
    "compilerOptions": {
        "jsx": "react",
        "lib": [
            "ES6"
        ],
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node", /* Specify how TypeScript looks up a file from a given module specifier. */
        "strict": true,
        "typeRoots": [
            "**/types",
            "node_modules/@types"
        ],
        "outDir": "build",
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "noImplicitAny": false,
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true /* Skip type checking all .d.ts files. */
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}